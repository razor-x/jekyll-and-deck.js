@import "css-modal/modal"

.notes
  @extend %modal
  @extend %modal-theme

<% if site.config['social'] %>
// Fix Twitter button positioning.
iframe.twitter-share-button
  display: inline-block
  margin: 0

// Hide social buttons until deck is loaded.
aside.social-buttons
  visibility: hidden

  // Hide Google +1 button (it shows even if parent is hidden).
  div.g-plus-container
    display: inline-block
    iframe
      visibility: hidden !important

  // Like button is misaligned because it sets vertical-align: bottom
  div.fb-like.fb_iframe_widget > span
    vertical-align: initial !important
<% end %>
