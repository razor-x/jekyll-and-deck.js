'use strict'

config = 'TeX-AMS-MML_HTMLorMML'

# Put code that needs to run before MathJax is loaded above this
<% if site.config['local'] %>
Modernizr.load
  load: "MathJax/MathJax.js?config=#{config}"
  complete: ->
    if window.MathJax then initMathJax()
<% else %>
Modernizr.load
  load: "http://cdn.mathjax.org/mathjax/latest/MathJax.js?config=#{config}"
  complete: ->
    if !window.MathJax
      Modernizr.load "MathJax/MathJax.js?config=#{config}"
    if window.MathJax then initMathJax()
<% end %>

